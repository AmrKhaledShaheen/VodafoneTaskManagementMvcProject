@{
    ViewBag.Title = "Filter Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <input type="hidden" id="typeValue" value="7" />

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center gy-3">
                        <div class="col-sm">
                            <h5 class="card-title mb-0">Manage Your Own Tasks</h5>
                        </div>

                    </div>
                </div>
                <div class="card-body border border-dashed border-end-0 border-start-0">
                    <div>
                        <div class="accordion card" id="default-accordion-example1">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne1">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne1" aria-expanded="false" aria-controls="collapseOne1">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="avatar-sm flex-shrink-0">
                                                    <span class="avatar-title bg-info-subtle text-info rounded-circle fs-4">
                                                        <i class="ri-equalizer-fill"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="ml-5">
                                                <h6 class="mt-3 ff-secondary fw-semibold">Filters</h6>
                                            </div>

                                        </div>
                                    </button>
                                </h2>

                                <div id="collapseOne1" class="accordion-collapse collapse" aria-labelledby="headingOne1" data-bs-parent="#default-accordion-example1" style="">
                                    <div class="accordion-body">
                                        <div class="">
                                            <div class="row">
                                                <div class="col-sm-2">
                                                    <h6 class="fw-semibold2">Status</h6>
                                                    <select class="input" id="Status" onchange="onChangeFilter()" >
                                                        <option value="" style="font-size: larger;font-style: italic;color: #7E1891;">Select Status</option>
                                                        <option value="1">Pending</option>
                                                        <option value="2">Completed</option>
                                                        <option value="3">OverDue</option>
                                                    </select>

                                                </div>
                                                <div class="col-sm-2">
                                                    <h6 class="fw-semibold2">Filter By</h6>
                                                    <select class="input" id="FilterBy" onchange="onChangeFilter()">
                                                        <option value="" disabled style="font-size: larger;font-style: italic;color: #7E1891;">Select Date Type</option>
                                                        <option value="1">Start Date</option>
                                                        <option value="2">Due Date</option>
                                                        <option value="3">Completion Date</option>
                                                    </select>

                                                </div>
                                                <div class="col-sm-2" onchange="onChangeFilter()">
                                                    <h6 class="fw-semibold2">Date From</h6>
                                                    <input class="input" id="DateFrom" type="date" placeholder="Date From">
                                                </div>

                                                <div class="col-sm-2" onchange="onChangeFilter()">
                                                    <h6 class="fw-semibold2">Date To</h6>
                                                    <input class="input" id="DateTo" type="date" placeholder="Date To">

                                                </div>
                                                
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table id="datatable" class="display table table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Start Date</th>
                                    <th>Due Date</th>
                                    <th>Completion Date</th>
                                    <th>Edit/Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="14" class="text-center">No data available</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/Task/GetPaggedData.js"></script>
    <link rel="stylesheet" href="~/css/Task/GetPaggedData.css" />
}
